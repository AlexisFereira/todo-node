<%- include('../includes/header'); %> 
<div class="row">
  <div class="pt-4">
    <form action="/login" method="POST" class="col-11 col-md-6 col-lg-4 mx-auto">
      <div class="card p-4 mb-4">
        <h2 class="fw-bolder text-center mb-3">Login</h2>
        <% if(messageError){%>
          <div class="w-100 badge text-bg-danger mb-3 py-2">
            <%= messageError%>
          </div>
        <%}%>
        <div class="mb-2">
          <label class="form-label" for="">Email:</label>
          <input type="text" name="email" class="form-control">
        </div>
        <div class='mb-2'>
          <label class="form-label" for="">Password:</label>
          <input type="password" name="password" class="form-control">
        </div>
        <div class="w-100 pt-3 mb-4">
          <button class=" w-100 btn btn-lg btn-primary">Submit</button>
        </div>
        <div class="w-100 text-center mx-auto">
          <p class="mb-2">¿Olvidó su contraseña?</p>
          <a href="/recover-pass">Recuperar contraseña</a>
        </div>
      </div>
    </form>
    <div class="text-center col-11 col-md-6 col-lg-4 mx-auto pt-3 px-4">
      <p>Aun no tienes una cuenta?</p>
      <a href="/sign-up" class="btn btn-primary w-100 btn-lg">Crear cuenta</a>
    </div>
  </div>
</div>
<%- include('../includes/footer'); %>
